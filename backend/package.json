{
  "name": "@origin/shop-backend",
  "version": "0.0.1",
  "description": "Origin Dshop Backend",
  "engines": {
    "node": ">=14.x"
  },
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "clean": "rm db/dshop.db; rm -rf data/*; npm run migrate",
    "heroku-postbuild": "npm run migrate",
    "lint": "eslint . && npm run prettier:check",
    "migrate": "sequelize db:migrate --config db/config.js --migrations-path db/migrations",
    "migrate:undo": "sequelize db:migrate:undo --config db/config.js --migrations-path db/migrations",
    "migration:generate": "sequelize migration:generate --config db/config.js --migrations-path db/migrations",
    "prettier": "prettier --write *.js \"**/*.js\"",
    "prettier:check": "prettier -c *.js \"**/*.js\"",
    "test": "NODE_ENV=test mocha --timeout 10000 --exit --file test/setup"
  },
  "author": "Nick Poulden <nick@originprotocol.com>",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/bigquery": "^5.3.0",
    "@google-cloud/compute": "^2.2.0",
    "@google-cloud/dns": "^2.0.2",
    "@google-cloud/storage": "^5.3.0",
    "@origin/ipfs": "^0.1.0",
    "@origin/utils": "^0.1.0",
    "@paypal/checkout-server-sdk": "^1.0.2",
    "@sentry/node": "^5.27.0",
    "@unstoppabledomains/resolution": "^1.8.3",
    "aws-sdk": "^2.776.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "bottleneck": "^2.19.5",
    "bs58": "^4.0.1",
    "bull": "^3.18.0",
    "bull-board": "^0.10.0",
    "cids": "^1.0.2",
    "cloudflare": "^2.7.0",
    "commander": "^6.1.0",
    "connect-session-sequelize": "^7.0.4",
    "cors": "^2.8.5",
    "dayjs": "^1.9.3",
    "dotenv": "^8.2.0",
    "envkey": "^1.2.8",
    "ethereumjs-util": "^7.0.7",
    "ethers": "5.0.19",
    "express": "^4.17.1",
    "express-promise-router": "4.0.1",
    "express-session": "^1.17.1",
    "fast-crc32c": "^2.0.0",
    "form-data": "^3.0.0",
    "formidable": "^1.2.2",
    "google-auth-library": "^6.1.1",
    "inquirer": "^7.3.3",
    "ipfs-deploy": "8.0.1",
    "ipfs-http-client": "^48.0.0",
    "json-stable-stringify": "^1.0.1",
    "lodash": "^4.17.20",
    "logplease": "^1.2.15",
    "mjml": "^4.7.1",
    "mv": "^2.1.1",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.4.14",
    "openpgp": "^4.10.8",
    "pg": "8.4.2",
    "randomstring": "^1.1.5",
    "reconnecting-websocket": "^4.4.0",
    "sequelize": "^5.21.10",
    "sequelize-cli": "^5.5.1",
    "serve-static": "^1.14.1",
    "sharp": "0.26.2",
    "sqlite3": "^5.0.0",
    "stripe": "^8.115.0",
    "uuid": "^8.3.1",
    "write-file-atomic": "^3.0.3",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-string": "1.5.0",
    "eslint": "7.13.0",
    "mocha": "8.2.1",
    "nodemon": "2.0.6",
    "prettier": "2.1.2"
  },
  "eslintIgnore": [
    "dist",
    "themes",
    "docs",
    "node_modules",
    "public"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "always",
    "trailingComma": "none"
  },
  "nodemonConfig": {
    "ignore": [
      "data/**",
      "dist/**",
      "backend/themes/**/*"
    ]
  }
}
