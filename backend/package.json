{
  "name": "@origin/shop-backend",
  "version": "0.0.1",
  "description": "Origin Dshop Backend",
  "engines": {
    "node": "10.x"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rm db/dshop.db; rm -rf data/*; npm run migrate",
    "heroku-postbuild": "npm run migrate",
    "lint": "eslint . && npm run prettier:check",
    "migrate": "sequelize db:migrate --config db/config.js --migrations-path db/migrations",
    "migrate:undo": "sequelize db:migrate:undo --config db/config.js --migrations-path db/migrations",
    "prettier": "prettier --write *.js \"**/*.js\"",
    "prettier:check": "prettier -c *.js \"**/*.js\"",
    "test": "NODE_ENV=test mocha --timeout 10000 --exit --file test/setup"
  },
  "author": "Nick Poulden <nick@originprotocol.com>",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/bigquery": "^5.0.0",
    "@google-cloud/dns": "^2.0.0",
    "aws-sdk": "^2.680.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "bottleneck": "^2.19.5",
    "bs58": "^4.0.1",
    "bull": "^3.14.0",
    "bull-board": "^0.9.0",
    "cids": "^0.8.0",
    "cloudflare": "^2.7.0",
    "commander": "^5.1.0",
    "connect-session-sequelize": "^6.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.8.27",
    "dotenv": "^8.2.0",
    "envkey": "^1.2.7",
    "ethereumjs-util": "^7.0.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "form-data": "^3.0.0",
    "formidable": "^1.2.2",
    "inquirer": "^7.1.0",
    "ipfs-deploy": "7.14.0",
    "ipfs-http-client": "^44.1.0",
    "lodash": "^4.17.15",
    "logplease": "^1.2.15",
    "mjml": "^4.6.3",
    "mv": "^2.1.1",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.6",
    "openpgp": "^4.10.4",
    "pg": "8.2.1",
    "randomstring": "^1.1.5",
    "reconnecting-websocket": "^4.4.0",
    "sequelize": "^5.21.10",
    "sequelize-cli": "^5.5.1",
    "serve-static": "^1.14.1",
    "sharp": "0.25.4",
    "sqlite3": "^4.2.0",
    "stripe": "^8.53.0",
    "web3": "1.2.9",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "eslint": "7.3.1",
    "mocha": "8.0.1",
    "prettier": "2.0.5"
  },
  "eslintIgnore": [
    "dist",
    "docs",
    "node_modules",
    "public"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "always",
    "trailingComma": "none"
  }
}
